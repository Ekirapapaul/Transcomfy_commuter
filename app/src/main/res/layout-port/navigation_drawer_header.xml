<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_accent"
    android:paddingTop="@dimen/navigation_drawer_header_padding_top"
    android:paddingStart="@dimen/activity_padding"
    android:paddingLeft="@dimen/activity_padding"
    android:paddingEnd="@dimen/activity_padding"
    android:paddingRight="@dimen/activity_padding"
    android:paddingBottom="@dimen/activity_padding">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/civ_avatar"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_person_accent_48dp"
        android:contentDescription="@string/img_description"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/text_primary"
        android:layout_marginStart="@dimen/view_margin_large"
        android:layout_marginLeft="@dimen/view_margin_large"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_email"
        android:textColor="@color/white"
        android:textSize="@dimen/text_secondary"
        android:layout_marginStart="@dimen/view_margin_large"
        android:layout_marginLeft="@dimen/view_margin_large"
        android:gravity="center"/>

</LinearLayout>